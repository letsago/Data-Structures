extends ./common/mixins.jade

block title
    title FindFilms Results

block content
    +button('/', 'Logout')
    +button('/search', 'Back to Search')
    div
        center
            table
                thead
                    th Movie
                    th Genre
                    th Length
                    th Critics Ratings
                    th Audience Ratings
                tbody
                    for movie in movieData
                        tr
                            +addResult(movie)


